{
  "metadata": [
    {
      "src": [
        {
          "files": [ "**/src/**/project.json" ],
          "exclude": [ "**/bin/**", "**/obj/**" ],
          "cwd": "src"
        }
      ],
      "dest": "obj/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "**/*.yml" ],
        "cwd": "obj/api",
        "dest": "api"
      },
      {
        "files": [ "articles/**/*.md", "*.md", "toc.yml" ]
      }
    ],
    "resource": [
      {
        "files": [ "articles/images/**"]
      }
    ],
    "overwrite": "apispecs/*.md",
    "globalMetadata": {
      "_appTitle": "Okra Framework API",
      "_enableSearch": true
    },
    "dest": "_site"
  }
}